VAR HOT_PRG$=PRGNAME$()
VAR HOT_SLOT%=PRGNAME$(0)!=HOT_PRG$
VAR HOT_TIMER%=30
VAR HOT_MAX%=20

DEF HOTRELOAD
	IF HOT_TIMER%>0 THEN:DEC HOT_TIMER%:RETURN
	HOT_TIMER%=HOT_MAX%
	IF CHKFILE("TXT:"+HOT_PRG$) THEN:RETURN
	VAR KEY1$=KEY(1)
	KEY 1,"RELOAD"
	REPEAT
		VSYNC HOT_MAX%
	UNTIL CHKFILE("TXT:"+HOT_PRG$)
	KEY 1,KEY1$
	LOAD "PRG"+STR$(HOT_SLOT%)+":"+HOT_PRG$,0
	EXEC HOT_SLOT%
END